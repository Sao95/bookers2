<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      
      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
  
      <%= form_with model:@user, local:true do |f| %>
      <diV class="form_group">
        <label for="user_name">Name</label>
        <div><%= f.text_field :name, autofocus: true %></div>
      </div>
        
      <diV class="form_group">
        <label for="user_name">Image</label>
        <div><%= f.attachment_field :profile_image %></div>
      </div>
        
      <diV class="form_group">
        <label for="user_introduction">Introduction</label>
        <div><%= f.text_area :introduction %></div>
      </div> 

      <diV class="form_group">
        <%= f.submit 'Update User', class:"btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
